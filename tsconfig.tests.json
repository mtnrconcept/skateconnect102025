{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist-tests",
    "rootDir": ".",
    "declaration": false,
    "sourceMap": false,
    "resolveJsonModule": true,
    "types": ["node", "vite/client"]
  },
  "include": [
    "src/lib/calendar.ts",
    "src/lib/engagement.ts",
    "src/lib/challenges.ts",
    "src/lib/supabase.ts",
    "src/types/**/*.ts",
    "tests/**/*.ts"
  ]
}
